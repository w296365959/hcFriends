<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="github.wzm.com.review_test.lib_auther.AnimDrawableActivity">

    <TextView
        android:id="@+id/frameAnimation_tv"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="帧动画"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/TweenAnimation_tv"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@color/smssdk_lv_title_color"
        android:gravity="center"
        android:text="补间动画"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/propertyAnimation_tv"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@color/smssdk_lv_tv_color"
        android:gravity="center"
        android:text="属性动画"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/transitionAnimation_tv"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@color/smssdk_lv_item_divider"
        android:gravity="center"
        android:text="过渡动画"
        android:textColor="@color/colorAccent"/>


    <ImageView
        android:src="@drawable/ssdk_oks_classic_vkontakte"
        android:id="@+id/imageView_iv"
        android:layout_marginTop="100dp"
        android:layout_width="200dp"
        android:layout_height="100dp"/>
</LinearLayout>
